{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": ["error", {
      "allow": ["info", "warn", "error"]
    }]
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true
  }
}
